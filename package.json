{
  "name": "nemo-instrument-poc",
  "version": "0.5.2",
  "description": "A proof of concept for Nemo instrument integration with automated versioning and GPG signing",
  "homepage": "https://github.com/TheRobBrennan/nemo-instrument-poc#readme",
  "bugs": {
    "url": "https://github.com/TheRobBrennan/nemo-instrument-poc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheRobBrennan/nemo-instrument-poc.git"
  },
  "license": "MIT",
  "author": "Rob Brennan <rob@sploosh.ai>",
  "private": true,
  "workspaces": [
    "services/frontend",
    "services/backend-mock"
  ],
  "scripts": {
    "start": "docker-compose -f docker/docker-compose.yml up",
    "start:clean": "docker-compose -f docker/docker-compose.yml up --build",
    "stop": "docker-compose -f docker/docker-compose.yml down",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:up:build": "docker-compose -f docker/docker-compose.yml up --build",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:clean": "docker-compose -f docker/docker-compose.yml down -v",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:backend": "docker-compose -f docker/docker-compose.yml up backend",
    "docker:frontend": "docker-compose -f docker/docker-compose.yml up frontend",
    "dev": "docker-compose -f docker/docker-compose.yml up",
    "build": "docker-compose -f docker/docker-compose.yml build",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspace=frontend",
    "test:ui": "npm run test:ui --workspace=frontend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "test:e2e:ui": "npm run test:e2e:ui --workspace=frontend",
    "test:e2e:headed": "npm run test:e2e:headed --workspace=frontend",
    "test:e2e:demo": "npm run test:e2e:demo --workspace=frontend",
    "demo:e2e": "chmod +x scripts/run-demo-e2e.sh && ./scripts/run-demo-e2e.sh",
    "test:e2e:report": "npm run test:e2e:report --workspace=frontend",
    "tauri:dev": "npm run tauri:dev --workspace=frontend",
    "tauri:build": "npm run tauri:build --workspace=frontend",
    "tauri:build:macos": "npm run tauri:build --workspace=frontend && open services/frontend/src-tauri/target/release/bundle/macos",
    "tauri:build:linux": "docker build -f services/frontend/Dockerfile.tauri -t nemo-tauri-builder services/frontend",
    "tauri:build:docker": "docker build -f services/frontend/Dockerfile.tauri -t nemo-tauri-builder services/frontend",
    "desktop": "npm run tauri:dev --workspace=frontend",
    "desktop:show": "open services/frontend/src-tauri/target/release/bundle/macos",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "setup:ssh": "eval \"$(ssh-agent -s)\" && ssh-add ~/.ssh/splooshai-github",
    "test:workflows": "chmod +x .github/test-workflows.sh && .github/test-workflows.sh",
    "test:workflows:semantic": "act pull_request -e .github/test-data/pr-events/minor.json -W .github/workflows/semantic-pr-check.yml",
    "test:workflows:semantic:major": "act pull_request -e .github/test-data/pr-events/major.json -W .github/workflows/semantic-pr-check.yml",
    "test:workflows:semantic:minor": "act pull_request -e .github/test-data/pr-events/minor.json -W .github/workflows/semantic-pr-check.yml",
    "test:workflows:semantic:patch": "act pull_request -e .github/test-data/pr-events/patch.json -W .github/workflows/semantic-pr-check.yml",
    "test:workflows:semantic:invalid": "act pull_request -e .github/test-data/pr-events/invalid.json -W .github/workflows/semantic-pr-check.yml",
    "test:workflows:version": "act workflow_dispatch -W .github/workflows/version-bump.yml --container-architecture linux/amd64",
    "test:workflows:merge": "act push -e .github/test-data/pr-events/merge.json -W .github/workflows/main-merge.yml --container-architecture linux/amd64"
  }
}
